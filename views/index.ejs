    <form class="form-signin" action="/api/users" method="post">
        <h1 class="h3 mb-3 font-weight-normal">Enter the User</h1>
        <label for="inputName" class="sr-only">User Name</label>
        <input type="inputName" name="name" id="inputusername" class="form-control" placeholder="User Name" required="" autofocus="">
